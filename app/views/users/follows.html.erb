<!-- フォローしている側 -->

<div class="col-xs-12">
<h2>Follow Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="4"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name%></td>

			<!-- フォロー・フォロワーカウント -->
			<th><%= "フォロー数：#{user.followings.count}" %></th>
			<th><%= "フォロワー数：#{user.followers.count}" %></th>
			<!-- フォロー・フォロワーカウント -->
			<!-- フォローボタン -->
			<th>
		    <% if current_user != user %>
             <% if user.followed_by?(current_user) %>
              <div class="row"><%= link_to"フォロー外す", user_relationships_path(user.id), method: :delete%></div>
             <% else %>
              <div class="row"><%= link_to"フォローする", user_relationships_path(user.id), method: :post %></div>
             <% end %>
　　　　　　  <% end %>
            </th>
			<!-- フォローボタン -->

			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--users一覧 -->
 </div>